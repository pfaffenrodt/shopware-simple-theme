        <input-field type="bool">
            <name>detailShowQuantitySelect</name>
            <label>Show quantity select</label>
            <label lang="de-DE">Mengenauswahl anzeigen</label>
            <defaultValue>false</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>detailShowBuyBoxInfo</name>
            <label>Show buy box info</label>
            <label lang="de-DE">Zeigt die Info Box unter dem Warenkorb Button an</label>
            <defaultValue>true</defaultValue>
            <helpText>The text is a Snippet. Go to the Snippet settings to change the text. The key is buyBox_info</helpText>
            <helpText lang="de-DE">Der Text ist ein Snippet. Bitte gehe in die Snippet Einstellungen, um den Text zu ändern. Der Snippet Key ist buyBox_info</helpText>
        </input-field>

        <input-field type="bool">
            <name>detailShowTags</name>
            <label>Show article tags</label>
            <label lang="de-DE">Artikel Schlagwörter anzeigen</label>
            <defaultValue>false</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>detailShowBreadcrumb</name>
            <label>Show breadcrumb</label>
            <label lang="de-DE">Breadcrumb anzeigen</label>
            <defaultValue>false</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>detailShowManufacturerLogo</name>
            <label>Show manufacturer logo instead of text</label>
            <label lang="de-DE">Zeige Hersteller Logo anstatt Text</label>
            <defaultValue>false</defaultValue>
        </input-field>

    </card>

    <card>
        <title>Footer settings</title>
        <title lang="de-DE">Footer Einstellungen</title>

        <input-field type="bool">
            <name>footerSocialIcons</name>
            <label>Show social icons</label>
            <label lang="de-DE">Zeige social icons</label>
            <defaultValue>true</defaultValue>
        </input-field>

        <input-field type="textarea">
            <name>footerDisclaimerText</name>
            <label>Disclaimer</label>
        </input-field>

    </card>
