    <card>
        <title>Social settings</title>
        <title lang="de-DE">Social Media</title>

        <input-field type="text">
            <name>socialFacebookLink</name>
            <label>Facebook</label>
            <placeholder>https://</placeholder>
            <defaultValue>https://</defaultValue>
        </input-field>

        <input-field type="text">
            <name>socialTwitterLink</name>
            <label>Twitter</label>
            <placeholder>https://</placeholder>
            <defaultValue>https://</defaultValue>
        </input-field>

        <input-field type="text">
            <name>socialInstagramLink</name>
            <label>Instagram</label>
            <placeholder>https://</placeholder>
            <defaultValue>https://</defaultValue>
        </input-field>

        <input-field type="text">
            <name>socialYoutubeLink</name>
            <label>Youtube</label>
            <placeholder>https://</placeholder>
            <defaultValue>https://</defaultValue>
        </input-field>

        <input-field type="text">
            <name>socialPinterestLink</name>
            <label>Pinterest</label>
            <placeholder>https://</placeholder>
            <defaultValue>https://</defaultValue>
        </input-field>

        <input-field type="text">
            <name>socialXingLink</name>
            <label>Xing</label>
            <placeholder>https://</placeholder>
            <defaultValue>https://</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Header settings</title>
        <title lang="de-DE">Header Einstellungen</title>

