        <input-field type="bool">
            <name>notificationBar</name>
            <label>Enable notification bar</label>
            <label lang="de-DE">Notification bar aktivieren</label>
        </input-field>

        <input-field type="bool">
            <name>flyoutIcon</name>
            <label>Icon Flyout menu</label>
            <label lang="de-DE">Icon Flyout Menü</label>
        </input-field>

        <input-field type="text">
            <name>logoMaxHeight</name>
            <label>Logo max height in px</label>
            <label lang="de-DE">Maximale Höhe des Logos in px</label>
        </input-field>

        <input-field type="bool">
            <name>topBar</name>
            <label>Enable the topbar</label>
            <label lang="de-DE">Aktiviere die topbar</label>
            <defaultValue>true</defaultValue>
        </input-field>

        <!--
        <input-field type="bool">
            <name>headerShowHome</name>
            <label>Show home icon</label>
            <label lang="de-DE">Zeige Startseite Button</label>
            <defaultValue>true</defaultValue>
        </input-field>
        -->

        <input-field type="bool">
            <name>headerSticky</name>
            <label>Sticky</label>
            <label lang="de-DE">Sticky</label>
            <defaultValue>true</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>headerMobileHamburgerRight</name>
            <label>Mobile hamburger menu right</label>
            <label lang="de-DE">Mobil Hamburger Menü rechts</label>
            <defaultValue>true</defaultValue>
        </input-field>

        <input-field type="single-select">
            <name>headerMobileLogoAlign</name>
            <options>
                <option>
                    <id>start</id>
                    <name>Left</name>
                    <name lang="de-DE">Links</name>
                </option>
                <option>
                    <id>center</id>
                    <name>Middle</name>
                    <name lang="de-DE">Mittig</name>
                </option>
                <option>
                    <id>end</id>
                    <name>Right</name>
                    <name lang="de-DE">Rechts</name>
                </option>
            </options>
            <label>Mobile logo align</label>
            <label lang="de-DE">Mobil Logo Platzierung</label>
        </input-field>

        <input-field type="bool">
            <name>headerMobileLogoMenuOneRow</name>
            <label>Mobile logo and menu same row</label>
            <label lang="de-DE">Mobil Logo und Menu in einer Zeile</label>
            <defaultValue>true</defaultValue>
            <helpText>When enabled the hamburger and logo position is disabled</helpText>
            <helpText lang="de-DE">Wenn aktiviert ist die Logo und Menu Position deaktiviert</helpText>
        </input-field>

    </card>

